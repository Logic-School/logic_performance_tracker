<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Define your QWeb template for the dashboard_card view -->
    <t t-name="logic_performance_tracker.sales_report_template">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"/>
        <style>
            .page-header {

                padding: 10px;
                text-align: center;
            }

            .employee-report-details-card {
                border-radius: 10px;
                background-color: #ffffff;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                padding: 10px;
                margin-bottom: 20px;
            }
            
            .employee-image {
                height: 100px;
                width: auto;
                border-radius: 20px;
            }
            
            .performance-table {
                border-radius: 10px;
            }
            
            .label1{
                font-weight: bold;
            }
        </style>
        <div t-if="values" class="container-fluid" style="margin:0;padding:0;">
            
            <div class="container mt-3 card-body">
                <div class="page-header">
                    <h4>Sales Report - <span t-esc="values['start_date']"/> - <span t-esc="values['end_date']"/></h4>
                </div>
            </div>

            <div t-if="values['leads_leaderboard_data']">
                <div class="mt-5">
                    <div class="table-responsive table-sm card performance-table">
                        <!-- Add 'table-bordered' class for borders -->
                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr class="rounded" style="background-color:#78787859;">
                                    <td colspan="8" class="text-center font-weight-bold"><h5>Leaderboard</h5></td>
                                </tr>
                            </thead>
                            <thead class="bg-light">
                                <tr>
                                    <th scope="col" width="7%">#</th>
                                    <th scope="col" width="25%">Employee</th>
                                    <th class="text-center" width="18%" scope="col">Leads Count</th>
                                    <th scope="col" class="text-center" width="25%">Target Achieved</th>
    
                                    <th scope="col" class="text-center" width="25%">Conversion Rate (%)</th>
    
                                </tr>
                            </thead>
                            <tbody style="font-size:14px;">
                                <t t-set="index" t-value="1"/>
                                <t t-foreach="Object.keys(values['leads_leaderboard_data'])" t-as="employee">

                                    <tr class="o_employee_leads_data_name">
                                        <td class="d-none o_employee_id" t-att-data-empid="employee"/>
                                        <td t-esc="index"/>
                                        <td t-esc="values['leads_leaderboard_data'][employee]['name']"/>
                                        <td style="color: green" t-esc="values['leads_leaderboard_data'][employee]['lead_count']" class="text-center"/>
                                        <td class="text-center">
                                            <span style="color: brown" t-esc="values['leads_leaderboard_data'][employee]['lead_converted']"/>
                                            <span t-esc="' / '"/>
                                            <span style="color: green" t-esc="values['leads_leaderboard_data'][employee]['lead_target']"/>
                                        </td>
                                        <td style="color: green" t-esc="values['leads_leaderboard_data'][employee]['conversion_rate']" class="text-center"/>

                                        <!-- <td t-esc="exec_performance['average_rating']"/> -->


                                    </tr>
                                    <t t-set="index" t-value="index+1"/>
                                    </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div t-if="values['coursewise_sales_data']">
                <div class="mt-5">
                    <div class="table-responsive table-sm card performance-table">
                        <!-- Add 'table-bordered' class for borders -->
                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr class="rounded" style="background-color:#78787859;">
                                    <td t-att-colspan="values['course_names'].length + 3" class="text-center font-weight-bold"><h5>Coursewise Revenue</h5></td>
                                </tr>
                            </thead>
                            <thead>
                                <th scope="col" width="7%">#</th>
                                <th scope="col" width="25%">Employee</th>
                                <t t-foreach="values['course_names']" t-as="course">
                                    <th scope="col" t-esc="course"/>

                                </t>
                                <th scope="col">Total Revenue</th>

                            </thead>
                            <tbody style="font-size:14px;">
                                <t t-set="index" t-value="1"/>
                                <t t-foreach="Object.keys(values['coursewise_sales_data'])" t-as="employee">
                                    <tr>
                                        <td class="text-center" t-esc="index"/>
                                        <td class="text-center" t-esc="employee"/>
                                        <t t-foreach="Object.keys(values['coursewise_sales_data'][employee]['coursewise_data'])" t-as="course">
                                            <td class="text-center">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="16" fill="currentColor" class="bi bi-currency-rupee" viewBox="0 0 16 16">
                                                    <path d="M4 3.06h2.726c1.22 0 2.12.575 2.325 1.724H4v1.051h5.051C8.855 7.001 8 7.558 6.788 7.558H4v1.317L8.437 14h2.11L6.095 8.884h.855c2.316-.018 3.465-1.476 3.688-3.049H12V4.784h-1.345c-.08-.778-.357-1.335-.793-1.732H12V2H4v1.06Z"/>
                                                </svg>
                                                <span t-esc="values['coursewise_sales_data'][employee]['coursewise_data'][course]['course_revenue']"/>
                                            </td>
                                        </t>
                                        <td class="text-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="16" fill="currentColor" class="bi bi-currency-rupee" viewBox="0 0 16 16">
                                                <path d="M4 3.06h2.726c1.22 0 2.12.575 2.325 1.724H4v1.051h5.051C8.855 7.001 8 7.558 6.788 7.558H4v1.317L8.437 14h2.11L6.095 8.884h.855c2.316-.018 3.465-1.476 3.688-3.049H12V4.784h-1.345c-.08-.778-.357-1.335-.793-1.732H12V2H4v1.06Z"/>
                                            </svg>
                                            <span t-esc="values['coursewise_sales_data'][employee]['total_revenue']"/>

                                        </td>

                                    </tr>
                                <t t-set="index" t-value="index+1"/>

                                </t>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

            <div t-if="values['common_task_performances']">
                <div class="mt-5">
                    <div class="table-responsive table-sm card performance-table">
                        <!-- Add 'table-bordered' class for borders -->
                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr class="rounded" style="background-color:#78787859;">
                                    <td colspan="8" class="text-center font-weight-bold"><h5>Tasks Performance</h5></td>
                                </tr>
                            </thead>
                            <thead style="" class="">
                                <tr>
                                    <th scope="col" width="7%">#</th>
                                    <th scope="col" width="20%">Employee</th>
                                    <th colspan="2" class="text-center" width="20%" scope="col">Completed Tasks</th>
                                    <th colspan="2" class="text-center" width="20%" scope="col">Delayed Tasks</th>
        
                                    <th scope="col" width="18%">Average Rating</th>
                                    <th scope="col" width="15%" class="text-center">Score</th>
        
                                </tr>
                                <tr>
                                    <th scope="col" width="7%"></th>
                                    <th scope="col" width="20%"></th>
                                    <th scope="col" width="10%" class="text-center">Miscellaneous</th>
                                    <th scope="col" width="10%" class="text-center">To Do</th>
                                    <th scope="col" width="10%" class="text-center">Miscellaneous</th>
                                    <th scope="col" width="10%" class="text-center">To Do</th>
        
                                    <th scope="col" width="18%"></th>
                                    <th scope="col" width="15%"></th>
        
        
                                </tr>
                            </thead>
                            <tbody style="font-size:14px;">
                                <t t-set="index" t-value="1"/>
                                <t t-if="values['common_task_performances']" t-foreach="Object.keys(values['common_task_performances'])" t-as="employee">
    
                                    <tr>
                                        <td t-esc="index"/>
                                        <td t-esc="values['common_task_performances'][employee]['name']"/>
                                        <td style="color: green" t-esc="values['common_task_performances'][employee]['completed_misc_count']" class="text-center"/>
    
                                        <td style="color: green" t-esc="values['common_task_performances'][employee]['completed_to_do_count']" class="text-center"/>
                                        <td style="color: brown" t-esc="values['common_task_performances'][employee]['delayed_misc_count']" class="text-center"/>
                                        <td style="color: brown" t-esc="values['common_task_performances'][employee]['delayed_to_do_count']" class="text-center"/>
    
                                        <!-- <td t-esc="exec_performance['average_rating']"/> -->
                                        <t t-set="star_count" t-value="Math.round(values['common_task_performances'][employee]['combined_rating'])"/>
                                        <td>
                                            <t t-foreach="Array.from(Array(star_count).keys())" t-as="star_ind">
                                                <span class="fa fa-star checked"></span>
                                            </t>
                                            <t t-foreach="Array.from(Array(5-star_count).keys())" t-as="star_ind">
                                                <span class="fa fa-star"></span>
                                            </t>
                                            <span class="ml-2" t-esc="values['common_task_performances'][employee]['combined_rating']"/>
                                        </td>
                                        <td style="color: green" t-esc="values['common_task_performances'][employee]['score']" class="text-center"/>
    
    
                                    </tr>
                                    <t t-set="index" t-value="index+1"/>
                                    </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>