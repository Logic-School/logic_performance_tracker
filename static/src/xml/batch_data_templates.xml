<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <!-- Define your QWeb template for the dashboard_card view -->
    <t t-name="logic_performance_tracker.academic_batches_template">
        <div t-if="batches" class="col">
            <select class="academic_batch form-control mr-2 font-weight-bold" style="display: inline-block; width: auto;background-color:#edf0f2;">
                <t t-if="batches" t-foreach="batches" t-as="batch">
                    <option t-att-value="batch['id']" t-esc="batch['name'] + ' (' + batch['strength'] + ' Students)'"/>
                </t>
            </select>
        </div>
    </t>

    <t t-name="logic_performance_tracker.batch_data_template">
        <div class="col-auto academic_batch_data_sub_div">
            <div class="card-body">
                <div class="detail-item">
                    <span class="label2">Upaya Conducted:</span>
                    <span class="number-value" t-esc="values['upaya_data']['is_conducted'] ? 'Yes' : 'No'"/>
                </div>
                <!-- <div class="detail-item">
                    <span class="label2">Upaya Attended:</span>
                    <span class="number-value" t-esc="'Nil'"/>
                </div> -->
                <div class="detail-item">
                    <span class="label2">Yes Plus Conducted:</span>
                    <span class="number-value" t-esc="values['yes_plus_data']['is_conducted'] ? 'Yes' : 'No'"/>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <span class="label2">Upaya Attended:</span>
                    </div>
                    <!-- <span class="number-value" t-esc="'0/0'"/>
                    <span>/ 5</span> -->
                    <div class="col p-0 mt-2 upaya_attended" style="margin-left:92px;">

                    </div>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <span class="label2">Yes Plus Average:</span>
                    </div>
                    <!-- <span class="number-value" t-esc="'0/0'"/>
                    <span>/ 5</span> -->
                    <div class="col p-0 mt-2 yes_plus_average" style="margin-left:80px;">

                    </div>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <span class="label2">Presentation Attended:</span>
                    </div>
                    <!-- <span class="number-value" t-esc="'0/0'"/>
                    <span>/ 5</span> -->
                    <div class="col p-0 mt-2 presentation_attended" style="margin-left:40px;">

                    </div>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <span class="label2">CIP Average Attendance:</span>
                    </div>
                    <!-- <span class="number-value" t-esc="'0/0'"/>
                    <span>/ 5</span> -->
                    <div class="col p-0 mt-2 cip_average" style="margin-left:24px;">

                    </div>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <span class="label2 ml-0 mr-0">Excel Average Attendance:</span>
                    </div>
                    <!-- <span class="number-value" t-esc="'0/0'"/>
                    <span>/ 5</span> -->
                    <div class="col p-0 mt-2 excel_average" style="margin-left:18px;">

                    </div>
                </div>
                <div class="row">
                    <div class="col-auto">
                        <span class="label2">BB Attendance:</span>
                    </div>
                    <!-- <span class="number-value" t-esc="'0/0'"/>
                    <span>/ 5</span> -->
                    <div class="col p-0 mt-2 bb_average" style="margin-left:97px;">

                    </div>
                </div>

                <div class="row">
                    <div class="col-auto">
                        <span class="label2">Mock Interview Attendance:</span>
                    </div>
                    <!-- <span class="number-value" t-esc="'0/0'"/>
                    <span>/ 5</span> -->
                    <div class="col p-0 mt-2 mock_average">

                    </div>
                </div>

                <div class="row">
                    <div class="col-auto">
                        <span class="label2">Attendance Average:</span>
                    </div>
                    <!-- <span class="number-value" t-esc="'0/0'"/>
                    <span>/ 5</span> -->
                    <div style="margin-left:54px;" class="col p-0 mt-2 attendance_average">

                    </div>
                </div>

                <div class="row justify-content-center card mt-4">
                    <div class="col-md-10" style="width:100%">
                        <div class="examchart-canvas-container" style="position:relative;height:400px;">
                            <canvas id="ExamChart1" style="width:600px;height:350px;"></canvas>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </t>
</templates>