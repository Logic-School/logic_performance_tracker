<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <!-- Define your QWeb template for the dashboard_card view -->
    <t t-name="logic_performance_tracker.employee_performance_template">
        <link rel="stylesheet" type="text/css" href="/logic_performance_tracker/static/src/css/dashboard_card_view.css"/>
        <link rel="stylesheet" type="text/css" href="/logic_performance_tracker/static/src/css/lib/jquery.orgchart.css"/>

        <link rel="stylesheet" type="text/css" href="/logic_performance_tracker/static/src/css/orgchart_styles.css"/>
        <link rel="stylesheet" type="text/css" href="/logic_performance_tracker/static/src/css/other_styles.css"/>
        <link rel="stylesheet" type="text/css" href="/logic_performance_tracker/static/src/css/employee_performance_styles.css"/>
        <div t-if="values" class="container-fluid" style="margin:0;padding:0;">

            <div class="row">
                <div class="container-fluid mt-3">
                    <div class="row justify-content-center">
                        <div class="col-auto" style="margin-left: auto; margin-right: 0;">   
                            <span class="font-weight-bold">From: </span>
                            <input class="from_date date-picker-icon custom-date-input" type="date"/>
                            <span class="font-weight-bold"> To: </span>
                            <input placeholder="From: " class="end_date date-picker-icon custom-date-input" type="date"/>
                            <button class="ml-2 filter-button btn-md o_filter_performance" type="button">Filter</button>
                            <button class="rounded btn-md btn-warning o_filter_reset" type="button">Reset</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="container-fluid">
                    <div class="row justify-content-start">
                        <div class="col-auto">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col">
                                        <div t-if="values['personal_data']" class="employee_details_card card mt-3">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col">

                                                        <div class="personal-details">
                                                            <div class="text-center" >
                                                                <img t-att-src="values['personal_data']['image']" class="m-3" style="height: 100px; width:auto; border-radius:20px;" />
                                                            </div>
                                                            <div class="detail-item">
                                                                <span class="label1">Name:</span>
                                                                <span class="value" t-esc="values['personal_data']['name']"/>
                                                            </div>
                                                            <div class="detail-item">
                                                                <span class="label1">Position:</span>
                                                                <span class="value" t-esc="values['personal_data']['job_title']"/>
                                                            </div>
                                                            <div class="detail-item">
                                                                <span class="label1">Department:</span>
                                                                <span class="value" t-esc="values['personal_data']['department_name']"/>
                                                            </div>
                                                            <!-- <div class="detail-item mt-3">
                                                                <span class="label">Projects Completed:</span>
                                                                <span class="value">15</span>
                                                            </div>
                                                            <div class="detail-item">
                                                                <span class="label">Tasks Completed:</span>
                                                                <span class="value">50</span>
                                                            </div>
                                                            <div class="detail-item">
                                                                <span class="label">Student Feedback Score:</span>
                                                                <span class="value">4.5/5</span>
                                                            </div> -->

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                                <div class="row">
                                    <div class="col">
                                        <div class="employee_details_card card mt-3" style="height: 100%;">
                                            <div class="card-body">
                                                <h2 class="card-title"><u>Performance Details</u></h2>
                                                <div class="detail-item" t-if="values['common_performance']">
                                                    <span class="label1">Miscellaneous Tasks:</span>
                                                    <span class="number-value" t-esc="values['common_performance']['misc_task_count']"/>
                                                </div>
                                                <div class="detail-item">
                                                    <span class="label1">To Do Tasks:</span>
                                                    <span class="number-value" t-esc="values['common_performance']['to_do_count']"/>
                                                </div>
                                                <div class="detail-item" t-if="values['marketing_data']">
                                                    <span class="label1">Leads Target:</span>
                                                    <span class="number-value" t-esc="values['marketing_data']['year_leads_count']"/>
                                                    <span>/</span>
                                                    <span t-esc="values['marketing_data']['year_leads_target']"/>
                                                </div>
                                                <div class="detail-item" t-if="values['academic_data']">
                                                    <span class="label1">Student rating:</span>
                                                    <span class="number-value" t-esc="values['academic_data']['student_feedback_rating']"/>
                                                    <span>/ 5</span>
                                                </div>
                                                <div class="detail-item" t-if="values['common_performance']">
                                                    <span class="label1">Qualitative rating:</span>
                                                    <span class="number-value" t-esc="values['common_performance']['qualitative_rating']"/>
                                                    <span>/ 5</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col m-2">
                            <div class="container-fluid mt-3">
                                <div class="row justify-content-center">
                                    <div class="col-md-10" style="width:100%">
                                        <div class="linechart-canvas-container" style="position:relative;height:400px;">
                                            <canvas id="LineChart1" style="width:600px;height:350px;"></canvas>
                                        </div>
                                    </div>

                                    <div class="col-xs-1 inline-block" >
                                        <div style="margin-left: auto; margin-right: 0;">
                                            <span class="font-weight-bold">Year: </span>
                                            <span class="filter_year font-weight-bold" t-esc="values['year']"/>

                                            <!-- <select class="graph_year form-control mr-2" style="display: inline-block; width: auto;background-color:#bfc1c2;">
                                                <t t-foreach="values['years']" t-as="year">
                                                    <option t-att-value="year" t-esc="year"/>
                                                </t>
                                            </select> -->

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row" t-if="values['marketing_data']">
                <div class="container-fluid">
                    <div class="row justify-content-start">
                        <div class="col m-2">
                            <div class="container-fluid mt-3">
                                <div>
                                    <div class="container-fluid mt-3">
                                        <div class="row justify-content-center">
                                            <div class="col">                            
                                                <div class="districtchart-canvas-container" style="position:relative;height:500px;">
                                                    <canvas id="districtWiseLeadChart" style="width:700px;height:450px;"></canvas>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row m-2">
                <t t-if="values['common_performance']">
                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="logic.task.other" name="Miscellaneous Works">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon "><img class="img-fluid" src="/logic_performance_tracker/static/src/icons/miscellaneous.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">Miscellaneous</div>
                                        <div class="stat-digit"><t t-esc="values['common_performance']['misc_task_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="to_do.tasks" name="To Do">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon "><img class="img-fluid" src="/logic_performance_tracker/static/src/icons/to_do.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">To Do</div>
                                        <div class="stat-digit"><t t-esc="values['common_performance']['to_do_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>


                <t t-if="values['academic_data']">
    
                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="upaya.form" name="Upaya">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon "><img class="img-fluid" src="/logic_performance_tracker/static/src/icons/upaya.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">Upaya</div>
                                        <div class="stat-digit"><t t-esc="values['academic_data']['upaya_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="yes_plus.logic" name="Yes Plus">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/yes_plus.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">Yes Plus</div>
                                        <div class="stat-digit"><t t-esc="values['academic_data']['yes_plus_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="student.faculty" name="Student Faculty Club">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/sfc.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">SFC</div>
                                        <div class="stat-digit"><t t-esc="values['academic_data']['sfc_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="exam.details" name="Exams">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/exam.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">Exams</div>
                                        <div class="stat-digit"><t t-esc="values['academic_data']['exam_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="one_to_one.meeting" name="One to One">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/one_to_one.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">One To One</div>
                                        <div class="stat-digit"><t t-esc="values['academic_data']['one2one_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="logic.mock_interview" name="Mock Interview">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/mock_interview.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">Mock Interview</div>
                                        <div class="stat-digit"><t t-esc="values['academic_data']['mock_interview_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="logic.cip.form" name="CIP/Excel">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/cip_excel.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">CIP/Excel</div>
                                        <div class="stat-digit"><t t-esc="values['academic_data']['cip_excel_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 col-sm-6 oh-payslip" >
                        <div class="oh-card model_record_card" id="bring.your.buddy" name="Bring Your Buddy">
                            <div class="oh-card-body">
                                <div class="stat-widget-one">
                                    <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/bring_your_buddy.png"/></div>
                                    <div class="stat-content">
                                        <div class="stat-text">BB Program</div>
                                        <div class="stat-digit"><t t-esc="values['academic_data']['bring_buddy_count']"/></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </div>


            

        </div>
    </t>
</templates>