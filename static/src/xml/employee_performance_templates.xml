<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <!-- Define your QWeb template for the dashboard_card view -->
    <t t-name="logic_performance_tracker.employee_performance_template">
        <link rel="stylesheet" type="text/css" href="/logic_performance_tracker/static/src/css/employee_performance_styles.css"/>
        <div t-if="values">
            <div class="container-fluid mt-3">
                <div class="row justify-content-center">
                    <div class="col-auto">

                        <div t-if="values['personal_data']" class="col-auto employee_details_card card mt-3 mr-auto" style="width:fit-content">
                            <div class="card-body">
                                <div class="row">
                                    <div class="personal-details">
                                        <div class="text-center" >
                                            <img t-att-src="values['personal_data']['image']" class="m-3" style="height: 100px; width:auto; border-radius:20px;" />
                                        </div>
                                        <div class="detail-item">
                                            <span class="label">Name:</span>
                                            <span class="value" t-esc="values['personal_data']['name']">John Doe</span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="label">Position:</span>
                                            <span class="value" t-esc="values['personal_data']['job_title']">Senior Software Developer</span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="label">Department:</span>
                                            <span class="value" t-esc="values['personal_data']['department_name']"/>
                                        </div>
                                        <!-- <div class="detail-item mt-3">
                                            <span class="label">Projects Completed:</span>
                                            <span class="value">15</span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="label">Tasks Completed:</span>
                                            <span class="value">50</span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="label">Student Feedback Score:</span>
                                            <span class="value">4.5/5</span>
                                        </div> -->

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="employee_details_card card mt-3">
                            <div class="card-body">
                                <h2 class="card-title"><u>Performance Details</u></h2>
                                <div class="detail-item" t-if="values['common_performance']">
                                    <span class="label">Miscellaneous Tasks:</span>
                                    <span class="number-value" t-esc="values['common_performance']['misc_task_count']"/>
                                </div>
                                <div class="detail-item" t-if="values['academic_data']">
                                    <span class="label">Student rating:</span>
                                    <span class="number-value" t-esc="values['academic_data']['student_feedback_rating']"/>
                                    <span>/ 5</span>
                                </div>
                                <div class="detail-item" t-if="values['common_performance']">
                                    <span class="label">Qualitative rating:</span>
                                    <span class="number-value" t-esc="values['common_performance']['qualitative_rating']"/>
                                    <span>/ 5</span>
                                </div>
                                <div class="detail-item">
                                    <span class="label">Tasks Completed:</span>
                                    <span class="number-value">50</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div t-if="values['academic_data']">
                <div t-if="values">
                    <div class="row m-2">


                        <div class="col-md-2 col-sm-6 oh-payslip" >
                            <div class="oh-card model_record_card" id="upaya.form" name="Upaya">
                                <div class="oh-card-body">
                                    <div class="stat-widget-one">
                                        <div class="stat-icon "><img class="img-fluid" src="/logic_performance_tracker/static/src/icons/upaya.png"/></div>
                                        <div class="stat-content">
                                            <div class="stat-text">Upaya</div>
                                            <div class="stat-digit"><t t-esc="values['academic_data']['upaya_count']"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2 col-sm-6 oh-payslip" >
                            <div class="oh-card model_record_card" id="yes_plus.logic" name="Yes Plus">
                                <div class="oh-card-body">
                                    <div class="stat-widget-one">
                                        <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/yes_plus.png"/></div>
                                        <div class="stat-content">
                                            <div class="stat-text">Yes Plus</div>
                                            <div class="stat-digit"><t t-esc="values['academic_data']['yes_plus_count']"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2 col-sm-6 oh-payslip" >
                            <div class="oh-card model_record_card" id="student.faculty" name="Student Faculty Club">
                                <div class="oh-card-body">
                                    <div class="stat-widget-one">
                                        <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/sfc.png"/></div>
                                        <div class="stat-content">
                                            <div class="stat-text">SFC</div>
                                            <div class="stat-digit"><t t-esc="values['academic_data']['sfc_count']"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="col-md-2 col-sm-6 oh-payslip" >
                            <div class="oh-card model_record_card" id="exam.details" name="Exams">
                                <div class="oh-card-body">
                                    <div class="stat-widget-one">
                                        <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/exam.png"/></div>
                                        <div class="stat-content">
                                            <div class="stat-text">Exams</div>
                                            <div class="stat-digit"><t t-esc="values['academic_data']['exam_count']"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2 col-sm-6 oh-payslip" >
                            <div class="oh-card model_record_card" id="one_to_one.meeting" name="One to One">
                                <div class="oh-card-body">
                                    <div class="stat-widget-one">
                                        <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/one_to_one.png"/></div>
                                        <div class="stat-content">
                                            <div class="stat-text">One To One</div>
                                            <div class="stat-digit"><t t-esc="values['academic_data']['one2one_count']"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2 col-sm-6 oh-payslip" >
                            <div class="oh-card model_record_card" id="logic.mock_interview" name="Mock Interview">
                                <div class="oh-card-body">
                                    <div class="stat-widget-one">
                                        <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/mock_interview.png"/></div>
                                        <div class="stat-content">
                                            <div class="stat-text">Mock Interview</div>
                                            <div class="stat-digit"><t t-esc="values['academic_data']['mock_interview_count']"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-md-2 col-sm-6 oh-payslip" >
                            <div class="oh-card model_record_card" id="logic.cip.form" name="CIP/Excel">
                                <div class="oh-card-body">
                                    <div class="stat-widget-one">
                                        <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/cip_excel.png"/></div>
                                        <div class="stat-content">
                                            <div class="stat-text">CIP/Excel</div>
                                            <div class="stat-digit"><t t-esc="values['academic_data']['cip_excel_count']"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2 col-sm-6 oh-payslip" >
                            <div class="oh-card model_record_card" id="bring.your.buddy" name="Bring Your Buddy">
                                <div class="oh-card-body">
                                    <div class="stat-widget-one">
                                        <div class="stat-icon"><img class="overflow-auto img-fluid" src="/logic_performance_tracker/static/src/icons/bring_your_buddy.png"/></div>
                                        <div class="stat-content">
                                            <div class="stat-text">BB Program</div>
                                            <div class="stat-digit"><t t-esc="values['academic_data']['bring_buddy_count']"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>